# Configurações do Banco de Dados
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/saas_barbearias"

# Configurações JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Configurações do Servidor
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"

# Configurações Redis (Cache)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DATABASE=0

# Configurações de Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@saas-barbearias.com"
FROM_NAME="SaaS Barbearias"

# Configurações de Upload
UPLOAD_MAX_SIZE=5242880  # 5MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp"

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Logs
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Configurações de Monitoramento
SENTRY_DSN=""

# Configurações de Desenvolvimento
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true

# Configurações de Produção
TRUST_PROXY=false

# Frontend Environment Variables
VITE_API_URL="http://localhost:3001/api"
VITE_APP_NAME="SaaS Barbearias"
VITE_APP_VERSION="1.0.0"
VITE_ENABLE_DEVTOOLS=true

# Configurações de Testes
TEST_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/saas_barbearias_test"
TEST_JWT_SECRET="test-jwt-secret"

# Configurações Docker
POSTGRES_DB="saas_barbearias"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres123"
